<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>$(AssemblyName)</Title>
    <Company>JeremyEspresso</Company>
    <PackageProjectUrl>https://github.com/JeremyEspresso/xkcdSharp</PackageProjectUrl>
    <Description>A C# wrapper for easy interacting with https://xkcd.com/</Description>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="API\Rest\" />
    <Folder Include="API\Objects\" />
    <Folder Include="Extensions\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="https:\github.com\JeremyEspresso\xkcdSharp\blob\main\README.md" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="7.0.0" />
    <PackageReference Include="Remora.Rest" Version="3.1.1" />
  </ItemGroup>

</Project>
